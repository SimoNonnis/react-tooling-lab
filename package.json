{
  "name": "react-webpack-lab",
  "description": "High experimental repo to set up smart development/production environment for React using Webpack",
  "author": "Simon Nonnis (https://github.com/SimoNonnis)",
  "version": "0.2.1",
  "license": "MIT",
  "main": "src/main.js",
  "scripts": {
    "start": "webpack-dev-server --inline --hot",
    "build": "mkdir -p ./dist && npm run clean && webpack -p --config webpack.config.prod.js",
    "clean": "rm -rf ./dist/*",
    "stats": "webpack --profile --json > stats.json"
  },
  "keywords": [
    "react",
    "reactjs",
    "webpack",
    "css-modules",
    "babel",
    "postcss",
    "web-font-loader",
    "Hot Module Replacement",
    "eslint",
    "eslint-loader"
  ],
  "homepage": "https://github.com/SimoNonnis/react-webpack-lab#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/SimoNonnis/react-webpack-lab"
  },
  "bugs": {
    "url": "https://github.com/SimoNonnis/react-webpack-lab/issues"
  },
  "dependencies": {
    "babel-runtime": "^6.6.1",
    "react": "^15.0.2",
    "react-dom": "^15.0.2"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "babel-core": "^6.8.0",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-runtime": "^6.8.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "css-loader": "^0.23.1",
    "eslint": "^2.11.1",
    "eslint-loader": "^1.3.0",
    "eslint-plugin-react": "^5.1.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.8.5",
    "image-webpack-loader": "^1.8.0",
    "postcss-loader": "^0.9.1",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.0",
    "webpack-dev-server": "^1.14.1",
    "webpack-validator": "^2.1.1"
  }
}
